<configuration>
  <system.webServer>

    <handlers>
      <add name="iisnode" path="api/app.js" verb="*" modules="iisnode" />
    </handlers>

    <iisnode watchedFiles="*.js" loggingEnabled="false" />

    <rewrite>
      <rules>
        <rule name="api">
          <match url="api/*" />
          <action type="Rewrite" url="api/app.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>